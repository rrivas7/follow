<!DOCTYPE html>
<html>
  <head>
    <title>Follow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to 'Follow', root_path, class: 'navbar-brand' %>
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Edit profile', [:edit, :user_registration], class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Logout', [:destroy, :user_session], method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign up', [:new, :user_registration], class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Login', [:new, :user_session], class: 'nav-link'  %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>
    <div class="container">
      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
