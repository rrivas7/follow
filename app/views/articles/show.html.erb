<div class="page-header">
  <%= @article.title %>
</div>
<% if @article.image_url %>
  <p class="text-center">
    <%= image_tag @article.image_url, class: 'img-fluid' %>
  </p>
<% end %>
<% if @article.author %>
  <p>
    By <%= @article.author %>
  </p>
<% end %>
<% if @article.source %>
  <p class="italicized">
    <%= @article.source %>
  </p>
<% end %>
<% if @article.published_at %>
  <p>
    <%= @article.published_at %>
  </p>
<% end %>
<p>
  <%= @article.content || @article.description %>
</p>
