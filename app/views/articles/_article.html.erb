<div id="article-<%= article.id %>" class="card">
  <div class="card-body">
    <div class="card-title">
      <%= link_to article, class: 'stretched-link' do %>
        <%= article.title %>
      <% end %>
    </div>
    <p class="card-text">
      <%= article.description %>
    </p>
  </div>
</div>
